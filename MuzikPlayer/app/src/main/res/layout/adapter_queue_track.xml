<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_primary"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >
    <ImageView
        android:id="@+id/img_album_art"
        android:contentDescription="@string/cd_album_art"
        android:layout_width="@dimen/album_art_small"
        android:layout_height="@dimen/album_art_small"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_album_small"
        />
    <TextView
        android:id="@+id/txt_title"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_album_art"
        android:layout_toRightOf="@id/img_album_art"
        />
    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_toStartOf="@+id/btn_reorder"
        android:layout_toLeftOf="@+id/btn_reorder"
        />
    <TextView
        android:id="@+id/txt_artist"
        android:textColor="@color/text_primary"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@id/txt_title"
        android:layout_alignBaseline="@id/txt_duration"
        android:layout_toEndOf="@id/img_album_art"
        android:layout_toRightOf="@id/img_album_art"
        android:layout_toLeftOf="@id/txt_duration"
        android:layout_toStartOf="@id/txt_duration"
        />
    <ImageButton
        android:id="@id/btn_reorder"
        android:contentDescription="@string/cd_btn_reorder"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_swap_vert"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        />
</RelativeLayout>